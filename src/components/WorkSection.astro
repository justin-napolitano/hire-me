---
import { workLinks } from '../config/profile';
---
<section class="rounded-3xl border border-rose-50/10 bg-[#160f0c]/80 p-8">
	<header class="mb-4">
		<p class="text-xs uppercase tracking-[0.18em] text-rose-300/80">Work</p>
	</header>
	<div class="grid gap-4 md:grid-cols-3">
		{workLinks.map((link) => (
			<a
				class="group flex items-center gap-3 rounded-2xl border border-rose-50/10 bg-[#1b1310]/70 px-4 py-3 text-left transition hover:border-amber-200/50 hover:bg-[#25170f]"
				href={link.href}
				target={link.external ? '_blank' : undefined}
				rel={link.external ? 'noreferrer' : undefined}
			>
				<span class="flex size-11 items-center justify-center rounded-2xl bg-white/10">
					<img src={link.icon} alt="" width="32" height="32" loading="lazy" class="h-8 w-8" />
				</span>
				<div class="flex flex-col">
					<span class="text-base font-semibold text-white">{link.label}</span>
					{link.description && <span class="text-sm text-rose-200/80">{link.description}</span>}
				</div>
			</a>
		))}
	</div>
</section>
