---
import { profile, actionLinks } from '../config/profile';
---
<section class="rounded-3xl border border-rose-50/10 bg-[#1a1310]/80 p-8 shadow-2xl shadow-rose-500/20">
	<div class="flex flex-col gap-5">
		<span class="w-fit rounded-full border border-amber-200/40 bg-amber-200/10 px-3 py-1 text-[0.8rem] uppercase tracking-[0.2em] text-amber-100">
			Verified
		</span>
		<div class="flex flex-col gap-2">
			<p class="text-4xl font-semibold text-white">{profile.name}</p>
			{profile.tagline && <p class="text-lg text-rose-100/90">{profile.tagline}</p>}
			<div>
				<p class="text-xs uppercase tracking-[0.15em] text-rose-300/70">Location</p>
				<p class="text-xl text-rose-100/90">{profile.location}</p>
			</div>
		</div>
		{profile.verificationSummary && (
			<div class="rounded-2xl border border-rose-50/10 bg-[#130c09]/80 px-4 py-3">
				<p class="text-[0.65rem] font-semibold uppercase tracking-[0.15em] text-rose-200/70">Verification summary</p>
				<p class="mt-1 text-sm text-rose-50/80">{profile.verificationSummary}</p>
			</div>
		)}
		<div class="grid gap-3 md:grid-cols-3">
			{actionLinks.map((action) => (
				<a
					class="group flex items-center gap-3 rounded-2xl border border-rose-50/10 bg-[#1b1310]/80 px-4 py-3 text-left transition hover:border-amber-200/50 hover:bg-[#25170f]"
					href={action.href}
					target={action.external ? '_blank' : undefined}
					rel={action.external ? 'noreferrer' : undefined}
				>
					<div class="flex flex-col">
						<span class="text-base font-semibold text-white">{action.label}</span>
						{action.description && <span class="text-sm text-rose-200/80">{action.description}</span>}
					</div>
				</a>
			))}
		</div>
	</div>
</section>
