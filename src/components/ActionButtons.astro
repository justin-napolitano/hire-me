---
import { actionLinks } from '../config/profile';
---
<div class="grid gap-4 md:grid-cols-3">
	{actionLinks.map((action) => (
		<a
			class="group flex items-center gap-3 rounded-2xl border border-rose-50/10 bg-[#1b1310]/70 px-4 py-3 text-left transition hover:border-amber-200/50 hover:bg-[#25170f]"
			href={action.href}
			target={action.external ? '_blank' : undefined}
			rel={action.external ? 'noreferrer' : undefined}
		>
			{action.icon && (
				<span class="flex size-11 items-center justify-center rounded-2xl bg-white/10">
					<img
						src={action.icon}
						alt=""
						width="32"
						height="32"
						loading="lazy"
						class="h-8 w-8"
					/>
				</span>
			)}
			<div class="flex flex-col">
				<span class="text-base font-semibold text-white">{action.label}</span>
				{action.description && <span class="text-sm text-rose-200/80">{action.description}</span>}
			</div>
		</a>
	))}
</div>
