---
import type { ActionLink } from '../config/profile';

type Props = {
	actions?: ActionLink[];
};

const { actions = [] } = Astro.props as Props;
---
<div class="grid gap-4 md:grid-cols-3">
	{actions.map((action) => (
		<a
			class="group flex items-center gap-3 rounded-2xl border border-[var(--border-strong)] bg-[var(--surface-card-muted)] px-4 py-3 text-left transition hover:border-[var(--border-heavy)] hover:bg-[var(--surface-card)]"
			href={action.href}
			target={action.external ? '_blank' : undefined}
			rel={action.external ? 'noreferrer' : undefined}
		>
			{action.icon && (
				<span class="flex size-11 items-center justify-center rounded-2xl border border-[var(--icon-chip-border)] bg-[var(--icon-chip-bg)]">
					<img
						src={action.icon}
						alt=""
						width="32"
						height="32"
						loading="lazy"
						class="h-8 w-8"
					/>
				</span>
			)}
			<div class="flex flex-col">
				<span class="text-base font-semibold text-[var(--text-primary)]">{action.label}</span>
				{action.description && <span class="text-sm text-[var(--text-muted)]">{action.description}</span>}
			</div>
		</a>
	))}
</div>
