---
import { wins } from '../config/profile';
---
<section class="rounded-3xl border border-rose-50/10 bg-[#1f1511]/90 p-6">
	<ul class="grid gap-4 sm:grid-cols-3">
		{wins.map((win) => (
			<li class="rounded-2xl border border-rose-50/15 bg-[#140b09]/80 p-5 shadow-inner shadow-black/30">
				<p class="text-xs uppercase tracking-[0.3em] text-rose-300/70">{win.label}</p>
				<p class="mt-3 text-3xl font-semibold text-white sm:text-4xl">{win.value}</p>
				<p class="mt-2 text-sm text-rose-100/85">{win.detail}</p>
			</li>
		))}
	</ul>
</section>
