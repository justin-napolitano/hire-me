---
import type { WinStat } from '../config/profile';

type Props = {
	wins?: WinStat[];
	eyebrow?: string;
	title?: string;
};

const {
	wins = [],
	eyebrow = 'Wins',
	title = 'Proof points'
} = Astro.props as Props;
---
<section class="rounded-3xl border border-[var(--border-strong)] bg-[var(--surface-section-strong)] p-6">
	<header class="mb-4">
		{eyebrow && <p class="text-xs uppercase tracking-[0.3em] text-[var(--text-label)]">{eyebrow}</p>}
		{title && <h2 class="text-2xl font-semibold text-[var(--text-primary)]">{title}</h2>}
	</header>
	{wins.length ? (
		<ul class="grid gap-4 sm:grid-cols-3">
			{wins.map((win) => (
				<li class="rounded-2xl border border-[var(--border-soft)] bg-[var(--surface-card)] p-5 shadow-inner">
					<p class="text-xs uppercase tracking-[0.3em] text-[var(--text-label)]">{win.label}</p>
					<p class="mt-3 text-3xl font-semibold text-[var(--text-primary)] sm:text-4xl">{win.value}</p>
					<p class="mt-2 text-sm text-[var(--text-secondary)]">{win.detail}</p>
				</li>
			))}
		</ul>
	) : (
		<p class="text-sm text-[var(--text-muted)]">Share at least one win to populate this section.</p>
	)}
</section>
